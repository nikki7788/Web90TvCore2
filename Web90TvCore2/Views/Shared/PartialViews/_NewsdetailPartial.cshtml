

@*  چون از جند مدل میخواهیم استفاده کنیم یا باید مثل صفحه یک ویو مدل تعریف کنیم مدل ها را در ان ذخیر کنیم
    روش د وم استفاده از ویو بگ است
    دل نطرات و متن خبر را بوسیله ویو بگ ارسال میکنیم*@
@*@newsContext News*@

@{ 
    //دریافت مدل جزییات و متن خبر
   var newsContext= ViewBag.newsContext;
}



@* متن خبر *@
<div id="newsDetails">
    <article class="no-gutter separator-left">

        <section class="meta meta-top">
            <div class="content-infos float-left">
                <span>
                    <i class="fa fa-calendar"></i>
                    <span class="numbers">
                        @newsContext.NewsDate
                    </span>
                </span>
                <span>
                    <i class="fa fa-time"></i>
                    <span class="numbers">
                        @newsContext.NewsTime
                    </span>
                </span>
                <span>
                    <i class="fa fa-user"></i>
                    <span class="numbers">@newsContext.VisitCount</span>
                </span>
            </div>
        </section>
        <div class="clearfix"></div>
        <header>
            <h5 style=" margin:10px; font-weight:bold;">
                @newsContext.Title
            </h5>
        </header>

        <main class="content">

            @Html.Raw(newsContext.Content)
            <div>
            </div>
            <section class="meta meta-bottom">
                <div class="float-right">
                    <a class="btn-share-ico btn-share btn-facebook" data-share="facebook">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a class="btn-share-ico btn-share btn-twitter" data-share="twitter">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a class="btn-share-ico btn-share btn-googleplus" data-share="googleplus">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </div>
            </section>
            <div class="clearfix"></div>
            <ul class="list-inline tags">
                <li class="label list-inline-item">
                    <a href="/tag/news/%D9%BE%D8%B1%D8%B3%D9%BE%D9%88%D9%84%DB%8C%D8%B3/">
                        <i class="fa fa-tag"></i>
                        پرسپولیس
                    </a>
                </li>
                <li class="label list-inline-item">
                    <a href="/tag/news/%D8%AF%D8%A7%D8%AE%D9%84%DB%8C/">
                        <i class="fa fa-tag"></i>
                        داخلی
                    </a>
                </li>
                <li class="label list-inline-item">
                    <a href="/tag/news/%D8%AD%D8%B3%DB%8C%D9%86-%D9%85%D8%A7%D9%87%DB%8C%D9%86%DB%8C/">
                        <i class="fa fa-tag"></i>
                        حسین ماهینی
                    </a>
                </li>
            </ul>

        </main>
    </article>
</div>

@* نطرات کاربران *@
@await Html.PartialAsync("~/Views/Shared/PartialViews/_CommentPartial.cshtml")

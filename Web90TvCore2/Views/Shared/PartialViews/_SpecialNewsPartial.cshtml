
@model IEnumerable<News>

<div class="special-news">
    <div>
        <span class="news-header">اخبار ویژه</span>
        <div class="hr-divider"></div>
    </div>

    <div class="row  mb-3">
        @foreach (var item in Model)
        {
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 mb-3">

                <a asp-controller="Home" asp-action="NewsDetails" asp-route-id="@item.NewsId">
                    <div class="media">
                        <img src="~/upload/indexImage/@item.IndexImage" style="width:80px;height:80px;" />

                        <div class="media-body special-content">
                            @item.Abstract
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>

   
</div>
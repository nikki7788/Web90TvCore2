@model Poll
@inject Web90TvCore2.Models.UnitOfWork.IUnitOfWork Context

@{
    var answerList =await Context.PollOptionRepoUW.Get(a => a.PollID == Model.PollId);
}


<div id="poll">
    <span class="news-header ul-title-tabs-color">نظر سنجی</span>
    <div class="hr-divider"></div>
    <form>
        <!--start "poll-content-->
        <div id="poll-content">
            <div id="poll-statement">
                <span>@Model.Question</span>
            </div>
            <table>
                @foreach (var item in answerList)
                {

                    <tr>
                        <td>
                            <div class="form-group form-check-inline">
                                <label class="form-check-label">
                                    <input value="" type="radio" name="p" class="form-check-input" />
                                    @item.Answer
                                </label>
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div> <!--end poll-content-->
    </form>
    <div class="d-flex justify-content-end mb-3 ml-4">
        <button type="button" class="btn btn-success pt-1 pb-1">ثبت نطر</button>
    </div>
</div>
@model Category

@{
    ViewData["Title"] = "افزودن دسته بندی";
}

<div class="row center-block box box-primary ">



    <div class="col-md-4 col-md-4 col-md-offset-4 " style="margin-top:15px;margin-bottom:15px;">

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible center-block" style="margin-top:10px; width:100%; ">
                <strong> @ViewBag.SuccessMessage</strong>
                <a href="#" class="close pull-left text-light" data-dismiss="alert" aria-label="close"
                   style="opacity:.9;margin-left:0;color:white;text-decoration: none !important;">&times;</a>
            </div>
        }

        <form asp-area="AdminPanel" asp-controller="Category" asp-action="Create" method="post">
            @*   <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group justify-content-end">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">بازگشت</a>
            </div>
        </form>
    </div>
</div>


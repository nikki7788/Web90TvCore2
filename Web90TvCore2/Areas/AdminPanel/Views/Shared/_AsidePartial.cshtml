
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http

@inject UserManager<ApplicationUsers> _userManager
@inject IHttpContextAccessor _hc

@{
    //بدست آوردن اطلاعات کاربری که لاگین کرده در ویو
    var user = await _userManager.GetUserAsync(_hc.HttpContext.User);
}

<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-right image">
                <img src="~/upload/userImage/normalImage/@user.UserImagePath" class="img-circle" alt="User Image">
            </div>
            <div class="pull-right info">
                <p>@user.FirstName @user.LastName</p>
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> آنلاین</a>
            </div>
        </div>



        <!-- search form (Optional) --> 
        <form asp-controller="Home" asp-action="NewsSearch" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="جستجو">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->



        <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">تیتر</li>
            <!-- Optionally, you can add icons to the links -->
            <li class="active"><a asp-area="AdminPanel" asp-controller="Home" asp-action="Index"><i class="fa fa-link"></i> <span>پیشخوان </span></a></li>
            <li><a asp-area="AdminPanel" asp-controller="News" asp-action="Index"><i class="fa fa-link"></i> <span>مدیریت خبرها </span></a></li>
            <li><a asp-area="AdminPanel" asp-controller="Category" asp-action="Index"><i class="fa fa-link"></i> <span>مدیریت دسته بندی خبرها </span></a></li>
            <li><a asp-area="AdminPanel" asp-controller="Poll" asp-action="Index"><i class="fa fa-link"></i> <span>مدیریت نظرسنجی </span></a></li>
            <li><a asp-area="AdminPanel" asp-controller="Advertising" asp-action="Index"><i class="fa fa-link"></i> <span>مدیریت تبلیغات </span></a></li>
            <li><a href="#"><i class="fa fa-link"></i> <span>لینک ۲</span></a></li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-link"></i> <span>مدیریت سیستم</span>
                    <span class="pull-left-container">
                        <i class="fa fa-angle-right pull-left"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a asp-area="AdminPanel" asp-controller="User" asp-action="Index">مدیریت کاربران</a></li>
                    <li><a asp-area="AdminPanel" asp-controller="Role" asp-action="Index">دسترسی ها</a></li>
                    <li><a asp-area="AdminPanel" asp-controller="SiteSetting" asp-action="Index">متنظیمات سایت</a></li>
                </ul>
            </li>
        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>
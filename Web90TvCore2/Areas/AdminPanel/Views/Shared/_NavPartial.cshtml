
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http

@inject UserManager<ApplicationUsers> _userManager
@inject Web90TvCore2.Models.UnitOfWork.IUnitOfWork Context
@inject IHttpContextAccessor _hc

@{
    // باشد var  حتما بایدازنوع
    //نطرات دیده نشده را در ایکون  زنگ اعلان نمایش میدهد
    var cmList = await Context.CommentRepUW.Get(c => c.status == false);

    //بدست آوردن اطلاعات کاربری که لاگین کرده در ویو
    var user = await _userManager.GetUserAsync(_hc.HttpContext.User);
}

}

<nav class="navbar navbar-static-top">
